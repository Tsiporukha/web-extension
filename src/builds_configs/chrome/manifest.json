{
  "manifest_version": 2,

  "name": "Echo",
  "version": "0.1",
  "description": "Echo chrome extension",

  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "logo.png"
  },
  "permissions": ["tabs", "activeTab", "*://*.googleapis.com/*"],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["styles.css"]
    },
    {
      "matches": ["*://*.echoapplication.com/*"],
      "css": ["echo.css"]
    }
  ]

}
